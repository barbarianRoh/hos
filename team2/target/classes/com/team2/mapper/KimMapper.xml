<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.team2.mapper.KimMapper">
	<update id="updateSymptomCount" parameterType = "com.team2.component.KimDTO">
		UPDATE symptom_count
		SET count = count + 1
		WHERE symptom_name = #{symptom_Name}
	</update>
	<select id="kSignin" resultType="int">
		select count(*) from p2_kMember where kId=#{kId}
	</select>
	
	<insert id="kSignup">
		insert into p2_kmember values(#{kId}, #{kNick}, #{kGender}, #{kAge}, '1', sysdate, '1')
	</insert>
</mapper>